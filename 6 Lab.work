    Elec_Engine B;
    A.set_name("6-ТД-4");
    A.set_power(1500);
    A.set_type("Дизельний, Двухтактний, Опозитний");
    A.set_fuel_type("Дизельне паливо/Бензин");
    A.set_numb(6);
    A.set_capacity(26000);
    A.set_DI("Безпосередній Вприск");
    B.set_name("АІР 56В2");
    B.set_power(4);
    B.set_kW(3);
    B.set_type("Електродвигун Асинхронний Трьохфазний");
    A.show();
    B.show();
    return 0;
}                             


 


